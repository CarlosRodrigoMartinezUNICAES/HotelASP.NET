@page
@model HotelASP.NET.Pages.Admin.DashboardModel
@{
    ViewData["Title"] = "Dashboard Administrador";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Dashboard Administrador - EasyReverHotels</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <div class="nav-container">
            <div class="logo">Panel <span>Admin</span></div>
            <nav>
                <ul>
                    <li>
                        <form method="post" asp-page-handler="Logout">
                            <button type="submit" class="search-btn">Cerrar sesión</button>
                        </form>
                    </li>
                </ul>
            </nav>
        </div>
    </header>

    <main class="featured-rooms" style="margin-top: 100px;">
        <div class="section-title">
            <h2>Bienvenido, @Model.Username</h2>
            <div style="margin-top: 1rem; display: flex; gap: 1rem; justify-content: center;">
        <a href="/Admin/AnadirHabitacion" class="book-btn">Añadir Habitación</a>
        <a href="/Admin/VerHabitacion" class="search-btn">Ver Habitaciones</a>
    </div>
        </div>
        
        <div class="rooms-grid">
            <div class="room-card">
                <div class="room-info">
                    <h3 style="font-size: 2.5rem; margin: 0.5rem 0;">24</h3>
                    <p>Habitaciones Ocupadas</p>
                </div>
            </div>
            
            <div class="room-card">
                <div class="room-info">
                    <h3 style="font-size: 2.5rem; margin: 0.5rem 0;">12</h3>
                    <p>Habitaciones Disponibles</p>
                </div>
            </div>
            
            <div class="room-card">
                <div class="room-info">
                    <h3 style="font-size: 2.5rem; margin: 0.5rem 0;">56</h3>
                    <p>Clientes Registrados</p>
                </div>
            </div>
            
            <div class="room-card">
                <div class="room-info">
                    <h3 style="font-size: 2.5rem; margin: 0.5rem 0;">4</h3>
                    <p>Reservas Pendientes</p>
                </div>
            </div>
        </div>
    </main>
</body>
</html>