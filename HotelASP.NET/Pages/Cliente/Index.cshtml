@page
@using HotelASP.NET.Pages.Cliente
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EasyReverHotels - Reservaciones</title>
    <script src="~/js/carousel.js"></script>
</head>
<body>
    <header>
        <div class="nav-container">
            <div class="logo">Easy<span>Rever</span>Hotels</div>
            <nav>
                <ul>
                    <li><a href="#">Reservaciones</a></li>
                    <li><a href="/Ofertas_Especiales">Ofertas Especiales</a></li>
                    <li><a href="/Destinos">Destinos Populares</a></li>
                    <li><a href="/Contactos#">Contacto</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <section class="hero">
        <div class="carousel">
            <div class="carousel-images">
                <img src="/images/hero.webp" class="active" alt="Habitación de lujo">
                <img src="/images/vista al mar.jpg" alt="Vista al mar">
                <img src="/images/SUIT.jpg" alt="Suite moderna">
            </div>
            <button class="prev">&#10094;</button>
            <button class="next">&#10095;</button>
        </div>
        <div class="hero-content">
            <h1>Descubre el Lujo y Confort</h1>
            <p>Encuentra las mejores habitaciones para tu estadía perfecta</p>
        </div>
    </section>

    <section class="featured-rooms" id="habitaciones">
        <h2>Habitaciones Disponibles</h2>
        <div class="room-grid">
            @foreach (var habitacion in Model.HabitacionesDisponibles)
            {
                <div class="room-card">
                    <!-- Imagen dinámica basada en IdTipoHabitacion -->
                    <img src="/images/room@(habitacion.IdTipoHabitacion).jpg"
                         alt="Habitación @habitacion.Tipo">

                    <div class="room-info">
                        <h3>@habitacion.Tipo</h3>
                        <p><strong>Número:</strong> @habitacion.Numero</p>
                        <p><strong>Piso:</strong> @habitacion.Piso</p>
                        <p><strong>Capacidad:</strong> @habitacion.Capacidad persona(s)</p>
                        <p><strong>Precio por noche:</strong> $@habitacion.Precio</p>
                        @if (!string.IsNullOrWhiteSpace(habitacion.Detalles))
                        {
                            <p class="detalles">@habitacion.Detalles</p>
                        }
                    </div>
                </div>
            }
        </div>
    </section>

</body>
</html>