@page
@using HotelASP.NET.Pages.Cliente
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EasyReverHotels - Reservaciones</title>
    <script src="~/js/carousel.js"></script>
</head>
<body>
    <header>
        <div class="nav-container">
            <div class="logo">Easy<span>Rever</span>Hotels</div>
            <nav>
                <ul>
                    <li><a href="#inicio">Inicio</a></li>
                    <li><a href="#habitaciones">Habitaciones</a></li>
                    <li><a href="#servicios">Servicios</a></li>
                    <li><a href="#contacto">Contacto</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <section class="hero">
        <div class="carousel">
            <div class="carousel-images">
                <img src="/images/hero.webp" class="active" alt="Habitación de lujo">
                <img src="/images/vista al mar.jpg" alt="Vista al mar">
                <img src="/images/SUIT.jpg" alt="Suite moderna">
            </div>
            <button class="prev">&#10094;</button>
            <button class="next">&#10095;</button>
        </div>
        <div class="hero-content">
            <h1>Descubre el Lujo y Confort</h1>
            <p>Encuentra las mejores habitaciones para tu estadía perfecta</p>
        </div>
    </section>


    <section class="featured-rooms">
        
    </section>

    <footer>
        <div class="footer-content">
            <div class="footer-section">
                <h4>Sobre Nosotros</h4>
                <p>EasyReverHotels, tu mejor opción para reservaciones hoteleras de calidad.</p>
            </div>
            <div class="footer-section">
                <h4>Enlaces Rápidos</h4>
                <ul>
                    <li><a href="#">Reservaciones</a></li>
                    <li><a href="/Ofertas_Especiales">Ofertas Especiales</a></li>
                    <li><a href="/Destinos">Destinos Populares</a></li>
                    <li><a href="/Contactos#">Contacto</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h4>Contacto</h4>
                <ul>
                    <li>Email: info@easyreverhotels.com</li>
                    <li>Teléfono: +1 234 567 890</li>
                    <li>Dirección: Calle Principal #123</li>
                </ul>
            </div>
        </div>
    </footer>
</body>
</html>
