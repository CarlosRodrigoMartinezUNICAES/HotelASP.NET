@page
@using HotelASP.NET.Pages
@using HotelASP.NET.Pages.Cliente
@model ContactosModel
@{
    ViewData["Title"] = "Contacto - EasyReverHotels";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contacto - EasyReverHotels</title>
    <link rel="stylesheet" href="~/css/Contactos.css" />
   
 
</head>
<body>
    <header>
        <div class="logo">Easy<span>Rever</span>Hotels</div>
        <nav class="nav-container">
            <ul>
                <li><a href="/Cliente/Index">Inicio</a></li>
                <li><a href="#habitaciones">Habitaciones</a></li>
                <li><a href="#servicios">Servicios</a></li>
                <li><a href="#contacto">Contacto</a></li>
                <li><a href="#destinos">Destinos Populares</a></li>
            </ul>
        </nav>
    </header>

    <section class="contact-container">
        <div class="contact-info">
            <h2>Información de Contacto</h2>
            <ul>
                <li><strong>Email:</strong> info@easyreverhotels.com</li>
                <li><strong>Teléfono:</strong> +1 234 567 890</li>
                <li><strong>Dirección:</strong> Calle Principal #123, Ciudad, País</li>
            </ul>
        </div>

        <div class="contact-form">
            <h2>Envíanos tu mensaje</h2>
            <form>
                <input type="text" placeholder="Tu Nombre" required>
                <input type="email" placeholder="Tu Email" required>
                <textarea placeholder="Tu Mensaje" rows="5" required></textarea>
                <button type="submit">Enviar</button>
            </form>
        </div>
    </section>

    <footer>
        <div class="footer-content">
            <div class="footer-section">
                <h4>Sobre Nosotros</h4>
                <p>EasyReverHotels, tu mejor opción para reservaciones hoteleras de calidad.</p>
            </div>
            <div class="footer-section">
                <h4>Enlaces Rápidos</h4>
                <ul>
                    <li><a href="#">Reservaciones</a></li>
                    <li><a href="/Ofertas_Especiales">Ofertas Especiales</a></li>
                    <li><a href="/Destinos">Destinos Populares</a></li>
                    <li><a href="/Contactos#">Contacto</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h4>Contacto</h4>
                <ul>
                    <li>Email: info@easyreverhotels.com</li>
                    <li>Teléfono: +1 234 567 890</li>
                    <li>Dirección: Calle Principal #123</li>
                </ul>
            </div>
        </div>
    </footer>
    <script src="~/js/contactvalidation.js"></script>
</body>
</html>
