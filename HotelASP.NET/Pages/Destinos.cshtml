@page
@using EasyReverHotels.Pages
@model DestinosModel
@{
    ViewData["Title"] = "Destinos Populares";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Destinos Populares - EasyReverHotels</title>
    <script src="~/js/parallax.js"></script>
    <script src="~/js/prlxbackground.js"></script> <!-- Linking external JS -->
    <style>
        body {
            background-color: #ecf0f1;
            font-size: 1rem;
            line-height: 1.5;
            position: relative; /* Ensure the background moves with the mouse */
        }

        .parallax-background {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100vh;
            background: url('/images/city.jpg') center/cover no-repeat;
            z-index: -1; /* Keep it behind other content */
        }

        /* Additional Styles */
        .destinations-title {
            text-align: center;
            font-size: 2.5rem;
            font-weight: bolder;
            color: #fff;
            margin-top: 120px;
        }

        .destinations-list {
            margin-top: 50px;
        }
    </style>
</head>
<body>
    <div class="parallax-background"></div> <!-- Parallax background container -->
    <header>
        <div class="nav-container">
            <div class="logo">Easy<span>Rever</span>Hotels</div>
            <nav>
                <ul>
                    <li><a href="/">Inicio</a></li>
                    <li><a href="#habitaciones">Habitaciones</a></li>
                    <li><a href="#servicios">Servicios</a></li>
                    <li><a href="#contacto">Contacto</a></li>
                    <li><a href="#destinos">Destinos Populares</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <h1 class="destinations-title">Estos son algunos de tus próximos destinos</h1>

    <section class="destinations-list">
        <div class="destination-card">
            <img src="images/tokyo.webp" alt="Tokyo" />
            <h2>Tokyo</h2>
            <p>Uno de los principales atractivos turísticos de Japón</p>
        </div>
        <div class="destination-card">
            <img src="images/cancun.webp" alt="Cancún" />
            <h2>Cancún</h2>
            <p>Ideal para disfrutar de su vida nocturna</p>
        </div>
        <div class="destination-card">
            <img src="images/barcelona.webp" alt="Barcelona" />
            <h2>Barcelona</h2>
            <p>Un destino turístico que ofrece una mezcla única de historia, arte, cultura y gastronomía.</p>
        </div>
    </section>

    <footer>
        <div class="footer-content">
            <div class="footer-section">
                <h4>Sobre Nosotros</h4>
                <p>EasyReverHotels, tu mejor opción para reservaciones hoteleras de calidad.</p>
            </div>
            <div class="footer-section">
                <h4>Enlaces Rápidos</h4>
                <ul>
                    <li><a href="#">Reservaciones</a></li>
                    <li><a href="#">Ofertas Especiales</a></li>
                    <li><a href="#">Destinos Populares</a></li>
                    <li><a href="#">Contacto</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h4>Contacto</h4>
                <ul>
                    <li>Email: info@easyreverhotels.com</li>
                    <li>Teléfono: +1 234 567 890</li>
                    <li>Dirección: Calle Principal #123</li>
                </ul>
            </div>
        </div>
    </footer>
</body>
</html>
