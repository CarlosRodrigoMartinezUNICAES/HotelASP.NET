@page
@model HotelASP.NET.Pages.LoginModel
@{
    ViewData["Title"] = "Iniciar Sesión";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EasyReverHotels - Iniciar Sesión</title>
    <link rel="stylesheet" href="~/css/Login.css" />

</head>
<body>
    <header>
        <div class="nav-container">
            <div class="logo">Easy<span>Rever</span>Hotels</div>
            <nav>
                <ul>
                    <li><a href="/">Inicio</a></li>
                    <li><a href="#habitaciones">Habitaciones</a></li>
                    <li><a href="#servicios">Servicios</a></li>
                    <li><a href="#contacto">Contacto</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <div class="login-container">
        <div class="login-header">
            <h1>Iniciar Sesión</h1>
        </div>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger">
                @Model.ErrorMessage
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="alert alert-success">
                @Model.SuccessMessage
            </div>
        }

        <form method="post" class="login-form">
            <div class="form-group">
                <label for="username">Nombre de Usuario</label>
                <input type="text" id="username" name="Username" required>
                <span asp-validation-for="Input.Username" class="validation-message"></span>
            </div>
            <div class="form-group">
                <label for="password">Contraseña</label>
                <input type="password" id="password" name="Password" required>
                <span asp-validation-for="Input.Password" class="validation-message"></span>
            </div>
            <div>
                <button type="submit" class="login-btn">Iniciar Sesión</button>
            </div>
        </form>

        <div class="register-link">
            <p>¿No tienes una cuenta? <a href="/Register">Regístrate aquí</a></p>
        </div>
    </div>
</body>
</html>
