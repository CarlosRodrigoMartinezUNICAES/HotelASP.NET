@page
@using HotelASP.NET.Pages
@model OfertasEspecialesModel
@{
    ViewData["Title"] = "Ofertas Especiales - EasyReverHotels";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ofertas Especiales - EasyReverHotels</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #003366;
            color: white;
            padding: 20px 0;
            text-align: center;
        }

        .nav-container ul {
            list-style: none;
            padding: 0;
        }

            .nav-container ul li {
                display: inline;
                margin: 0 15px;
            }

                .nav-container ul li a {
                    color: white;
                    text-decoration: none;
                }

        .offer-container {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-wrap: wrap;
            padding: 50px 20px;
        }

        .offer-card {
            background-color: #ff5733;
            color: white;
            margin: 20px;
            padding: 20px;
            border-radius: 10px;
            width: 300px;
            text-align: center;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
        }

            .offer-card:hover {
                transform: translateY(-10px);
            }

            .offer-card h3 {
                margin-bottom: 15px;
                font-size: 24px;
            }

            .offer-card p {
                font-size: 18px;
            }

            .offer-card span {
                font-size: 28px;
                font-weight: bold;
            }

            .offer-card button {
                background-color: #003366;
                color: white;
                padding: 10px 20px;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                margin-top: 20px;
            }

                .offer-card button:hover {
                    background-color: #005bb5;
                }
    </style>
</head>
<body>
    <header>
        <div class="logo">Easy<span>Rever</span>Hotels</div>
        <nav class="nav-container">
            <ul>
                <li><a href="#inicio">Inicio</a></li>
                <li><a href="#habitaciones">Habitaciones</a></li>
                <li><a href="#servicios">Servicios</a></li>
                <li><a href="#contacto">Contacto</a></li>
                <li><a href="#destinos">Destinos Populares</a></li>
            </ul>
        </nav>
    </header>

    <section class="offer-container" style="margin-top: 80px;">
        <div class="offer-card">
            <h3>Escapada a la Playa</h3>
            <p>Disfruta de un fin de semana en la playa con un 40% de descuento</p>
            <span>$199 / Noche</span>
            <button>Reservar Ahora</button>
        </div>
        <div class="offer-card">
            <h3>Vacaciones de Lujo</h3>
            <p>Paquete exclusivo de 7 noches con todo incluido</p>
            <span>$1499 / Paquete</span>
            <button>Reservar Ahora</button>
        </div>
        <div class="offer-card">
            <h3>Escapada Romántica</h3>
            <p>Escapada de fin de semana para dos personas</p>
            <span>$299 / Noche</span>
            <button>Reservar Ahora</button>
        </div>
    </section>

    <footer>
        <div class="footer-content">
            <div class="footer-section">
                <h4>Sobre Nosotros</h4>
                <p>EasyReverHotels, tu mejor opción para reservaciones hoteleras de calidad.</p>
            </div>
            <div class="footer-section">
                <h4>Enlaces Rápidos</h4>
                <ul>
                    <li><a href="#">Reservaciones</a></li>
                    <li><a href="/Ofertas_Especiales">Ofertas Especiales</a></li>
                    <li><a href="/Destinos">Destinos Populares</a></li>
                    <li><a href="/Contactos#">Contacto</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h4>Contacto</h4>
                <ul>
                    <li>Email: info@easyreverhotels.com</li>
                    <li>Teléfono: +1 234 567 890</li>
                    <li>Dirección: Calle Principal #123</li>
                </ul>
            </div>
        </div>
    </footer>
</body>
</html>
